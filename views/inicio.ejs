<!-- views/cadastro.ejs -->
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <script src="/js/cadastrar.js"></script>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastro</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="form-container">
        <form method="post" style="display: flex; justify-content: center; margin-top: 150px; flex-direction: column; gap: 5px; width: 350px; margin: 0 auto;">

            
            <label for="nome">Nome</label>
            <input type="text" id="nome" name="nome" required>
            
            <label for="fornecedor">Fornecedor</label>
            <input type="text" id="fornecedor" name="fornecedor" required>
            
            <label for="precocompra">Preço Pago</label>
            <input class="preco" type="number" id="precocompra" name="precocompra" required>
            
            <label for="precovenda">Preço De Venda</label>
            <input class="preco" type="number" id="precovenda" name="precovenda" required>
            
            <label for="quant">Quantidade</label>
            <input class="quant" type="number" id="quant" name="quant" required>
            
            
                <button type="button" class="btn btn-primary"id="btnCadastrar">Cadastrar</button>
                
            
        </form>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Fornecedor</th>
                <th>Preço Pago</th>
                <th>Preço De Venda</th>
                <th>Quantidade</th>

                
            </tr>
        </thead>
    
        <tbody>
            
                <% for(let i=0;i<lista.length;i++) { %>
                    <tr>
                        <td><%= lista[i].nome %></td>
                        <td><%= lista[i].fornecedor %></td>
                        <td><%= lista[i].precocompra %></td>
                        <td><%= lista[i].precovenda %></td>
                        <td><%= lista[i].quant %></td>>
                    </tr>
               <% } %>
            
        </tbody>
    </table>
</body>
</html>
